# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/workflow_db

# Development Settings
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Optional: Logging Level
LOG_LEVEL=INFO

# LLM API Configuration (required for generative_ai nodes)
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key_here

# File Upload Configuration
MAX_PDF_SIZE_MB=10
UPLOAD_DIR=uploads

# Job Queue Configuration
MAX_CONCURRENT_JOBS=2
MAX_QUEUE_SIZE=20

# Note: For production, change the database password and use a secure connection string
# Example production DATABASE_URL (update with your actual values):
# DATABASE_URL=postgresql://username:password@host:port/database_name?sslmode=require